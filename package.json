{
	"name": "vscle",
	"displayName": "vscle",
	"description": "VSCode extension for CLE",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:c",
		"onLanguage:cpp",
		"workspaceContains:topology.json"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscle.startLanguageServer",
				"title": "CLE: Start Language Server"
			},
			{
				"command": "vscle.stopLanguageServer",
				"title": "CLE: Stop Language Server"
			},
			{
				"command": "vscle.restartLanguageServer",
				"title": "CLE: Restart Language Server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"pretest": "npm run compile",
		"lint": "eslint src --ext ts",
		"test": "node test/out/zmqtest/zmqtest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"concurrently": "^6.2.0",
		"eslint": "^7.27.0",
		"generator-code": "^1.5.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"yo": "^4.2.0"
	},
	"dependencies": {
		"dotenv": "^10.0.0",
		"vscode-languageclient": "^7.0.0",
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.1",
		"vscode-languageserver-types": "^3.16.0",
		"vscode-uri": "^3.0.2",
		"zeromq": "^6.0.0-beta.6"
	}
}
