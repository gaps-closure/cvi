{
	"name": "vscle",
	"displayName": "vscle",
	"description": "VSCode extension for CLE",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:c",
		"onLanguage:cpp"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscle.startLanguageServer",
				"title": "CLE: Start Language Server"
			},
			{
				"command": "vscle.stopLanguageServer",
				"title": "CLE: Stop Language Server"
			},
			{
				"command": "vscle.restartLanguageServer",
				"title": "CLE: Restart Language Server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"generator-code": "^1.5.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"yo": "^4.2.0"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}
